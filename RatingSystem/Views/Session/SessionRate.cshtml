@model RatingSystem.Models.ViewModel.SessionRateVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SessionDetails</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .rate {
            float: left;
            height: 46px;
            padding: 0 10px;
        }

            .rate:not(:checked) > input {
                position: absolute;
                top: -9999px;
            }

            .rate:not(:checked) > label {
                float: right;
                width: 1em;
                overflow: hidden;
                white-space: nowrap;
                cursor: pointer;
                font-size: 30px;
                color: #ccc;
            }

                .rate:not(:checked) > label:before {
                    content: '★ ';
                }

            .rate > input:checked ~ label {
                color: #ffc700;
            }

            .rate:not(:checked) > label:hover,
            .rate:not(:checked) > label:hover ~ label {
                color: #deb217;
            }

            .rate > input:checked + label:hover,
            .rate > input:checked + label:hover ~ label,
            .rate > input:checked ~ label:hover,
            .rate > input:checked ~ label:hover ~ label,
            .rate > label:hover ~ input:checked ~ label {
                color: #c59b08;
            }

        body {
            margin: 0;
            padding: 0;
            background-color: #7997a5ba;
            font-family: 'Arial';
        }

        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #23463f;
                color: white;
            }
            .checked {
  color: orange;
}
    </style>
</head>
<body>
    @if (Model != null)
    {
        <table id="customers">
            <tr>
                <th>Session Nam</th>
                <th>Presenter Name</th>
                <th>Voter Name</th>
                <th>Rate Degree</th>
                <th>Comment</th>

            </tr>
            @foreach (var item in Model.Rate)
            {
                <tr>
                    <td hidden><input name="SessionId" value="@item.Id"></td>
                    <td>@item.Rate_Session.SessionName</td>
                    <td>@item.Rate_Session.Presenter</td>
                    <td>@item.Rate_User.UserName</td>
                    <td>
                        <div class="rate">
                            @if (@item.RateDegree == 5)
                            {
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                            }else
                            @if (@item.RateDegree == 4)
                            {
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                            }else
                            @if (@item.RateDegree == 3)
                            {
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            }else
                            @if (@item.RateDegree == 2)
                            {
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            }else
                            @if (@item.RateDegree == 1)
                            {
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            }



                        </div>
                    </td>
                    <td><label>@item.Comment</label></td>

                </tr>

            }
        </table>
        <br />
        <br />
        <table id="customers">
            <tr>
                <th>Session Name</th>
                <th>Presenter Name</th>
                <th>Session Rate Average</th>
            </tr>
            @foreach (var item in Model.SesstionList)
            {
                <form method="post" action="AddRate">
                <tr>
                    <td hidden><input name="SessionId" value="@item.Id"></td>
                    <td>@item.SessionName</td>
                    <td>@item.Presenter</td>
                    <td>
                       @item.RateAverage
                    </td>
                </tr>
                </form>
            }
        </table>


    }
    else
    {
        <div>
            No Session Available
        </div>
    }


</body>
</html>
